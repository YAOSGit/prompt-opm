{
	"name": "@yaos-git/prompt-opm",
	"version": "126.0.1",
	"description": "A local-first Object Prompt Mapper and testing framework",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"prompt-opm": "dist/cli/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "run-tui -r \"^dev:\"",
		"dev:typescript": "tsgo --watch --noEmit -p tsconfig.app.json",
		"dev:test": "vitest --watch",
		"build": "node esbuild.config.js",
		"lint": "npm run lint:types && npm run lint:fix && npm run lint:format && npm run lint:audit",
		"lint:check": "biome lint .",
		"lint:fix": "biome check . --write",
		"lint:format": "biome format . --write",
		"lint:types": "tsgo --noEmit -p tsconfig.app.json",
		"lint:audit": "npm audit",
		"test": "npm run test:unit && npm run test:types && npm run test:e2e",
		"test:e2e": "npm run build && vitest run -c vitest.e2e.config.ts",
		"test:unit": "vitest run -c vitest.unit.config.ts",
		"test:types": "vitest run -c vitest.type.config.ts",
		"coverage": "vitest run --coverage",
		"coverage:unit": "vitest run --coverage -c vitest.unit.config.ts",
		"coverage:types": "vitest run --coverage -c vitest.type.config.ts",
		"prepublishOnly": "npm run lint:types && npm run lint:check && npm run test:unit && npm run test:types && npm run test:e2e && npm run lint:audit && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YAOSGit/prompt-opm.git"
	},
	"bugs": {
		"url": "https://github.com/YAOSGit/prompt-opm/issues"
	},
	"homepage": "https://github.com/YAOSGit/prompt-opm#readme",
	"keywords": [
		"cli",
		"prompt",
		"llm",
		"zod",
		"codegen",
		"typescript",
		"type-safe"
	],
	"author": "Ygor de Paula",
	"email": "ygorh.de.paula@gmail.com",
	"url": "https://github.com/YAOSGit/prompt-opm",
	"license": "ISC",
	"type": "module",
	"dependencies": {
		"chalk": "^5.6.2",
		"chokidar": "^5.0.0",
		"commander": "^14.0.3",
		"tokenx": "^1.3.0",
		"yaml": "^2.8.2"
	},
	"peerDependencies": {
		"zod": ">=3.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/node": "^25.0.1",
		"@typescript/native-preview": "^7.0.0-dev.20251216",
		"@vitest/coverage-v8": "^4.0.15",
		"@yaos-git/run-tui": "^125.2.0",
		"esbuild": "^0.27.1",
		"strip-ansi": "^7.1.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15",
		"zod": "^4.3.6"
	}
}
